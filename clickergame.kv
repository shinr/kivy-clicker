#:kivy 1.0.9

<ClickButton>
	canvas:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			size: self.size
			pos: self.pos


<ScoreLabel>
	canvas.before:
		Color: 
			rgb: .1, .1, 0
		Rectangle:
			size: self.size
			pos: self.pos

<MenuButton>
	size_hint: .3, .08

<BaseLabel>
	canvas:
		Color:
			rgb: 1, 1, 1

<UpgradeList>
	canvas.before:
		Color:
			rgb: .2, .2, .2
		Rectangle:
			size: self.size
			pos: self.pos
			
<Upgrade>
	canvas.before:
		Color:
			rgb: .4, .4, .9
		Rectangle:
			size: self.size
			pos: self.pos
	canvas:
		Color:
			rgb: 1, 1, 1